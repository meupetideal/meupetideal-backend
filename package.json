{
  "name": "meupetideal-backend",
  "scripts": {
    "start": "tsx src/infra/main.ts",
    "start:dev": "tsx watch src/infra/main.ts",
    "start:prod": "node dist/infra/main.js",
    "build": "tsup && copyfiles -u 1 src/**/*.html dist/ && pnpm sentry:sourcemaps",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org meu-pet-ideal --project node ./dist && sentry-cli sourcemaps upload --org meu-pet-ideal --project node ./dist"
  },
  "author": "Gustavo Amaral",
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/multipart": "^8.0.0",
    "@firebase/storage": "^0.11.2",
    "@prisma/client": "5.4.2",
    "@sentry/node": "^7.77.0",
    "bcrypt": "^5.1.1",
    "brazilian-values": "^0.13.0",
    "fastify": "^4.24.3",
    "firebase": "^10.5.2",
    "firebase-admin": "^11.11.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/nodemailer": "^6.4.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vitest/coverage-v8": "^0.34.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prisma": "^5.4.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "unplugin-swc": "^1.4.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5"
  }
}